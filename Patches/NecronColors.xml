  <!-- Mech_CentipedeBlaster (Heavy Destroyer) - Dark gunmetal with green energy -->
  <!-- First, override the inherited lifeStages to add our own -->
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/PawnKindDef[defName="Mech_CentipedeBlaster"]</xpath>
    <value>
      <lifeStages Inherit="False">
        <li MayRequire="Ludeon.RimWorld.Biotech">
          <bodyGraphicData>
            <texPath>Things/Pawn/Mechanoid/CentipedeClean</texPath>
            <maskPath>Things/Pawn/Mechanoid/AllegianceOverlays/Mech_Centipede</maskPath>
            <shaderType>CutoutWithOverlay</shaderType>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>3</drawSize>
            <shadowData>
              <volume>(0.6, 0.8, 0.6)</volume>
            </shadowData>
            <color>(140, 220, 180)</color>
          </bodyGraphicData>
        </li>
        <li>
          <bodyGraphicData>
            <texPath>Things/Pawn/Mechanoid/Centipede</texPath>
            <maskPath>Things/Pawn/Mechanoid/AllegianceOverlays/Mech_Centipede</maskPath>
            <shaderType>CutoutWithOverlay</shaderType>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>3</drawSize>
            <shadowData>
              <volume>(0.6, 0.8, 0.6)</volume>
            </shadowData>
            <color>(140, 220, 180)</color>
          </bodyGraphicData>
        </li>
      </lifeStages>
    </value>
  </Operation>

