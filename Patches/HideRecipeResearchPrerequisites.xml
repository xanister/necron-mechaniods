<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Remove research prerequisites from concrete recipes to hide them from research screen -->
  <!-- This prevents recipes from appearing as requirements in the research tree -->
  
  <!-- Override research prerequisites in concrete recipes to hide them from research screen -->
  <!-- By adding researchPrerequisite with Inherit="False" and empty value, we override the inherited prerequisite -->
  
  <!-- Light mech recipes (inherit BasicMechtech from BaseMechanoidRecipe) -->
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/RecipeDef[defName="Militor"]</xpath>
    <value>
      <researchPrerequisite Inherit="False"></researchPrerequisite>
    </value>
  </Operation>
  
