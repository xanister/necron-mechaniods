<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/FactionDef[defName="Mechanoid"]/label</xpath>
    <value>
      <label>Necron dynasty</label>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/FactionDef[defName="Mechanoid"]/description</xpath>
    <value>
      <description>Ancient, skeletal android warriors who have slumbered for eons. They seek to reclaim the galaxy that was once theirs.</description>
    </value>
  </Operation>
    
  <!-- ICONS -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/FactionDef[defName="Mechanoid"]/factionIconPath</xpath>
    <value>
      <factionIconPath>Factions/Necron/NecronIcon</factionIconPath>
    </value>
  </Operation>

  <!-- FACTION NAMES -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/FactionDef[defName="Mechanoid"]/factionNameMaker</xpath>
    <value>
      <factionNameMaker>FactionName_Mechanoids_Necron</factionNameMaker>
    </value>
  </Operation>

  <!-- PAWN PLURAL FOR RAID MESSAGES -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/FactionDef[defName="Mechanoid"]/pawnsPlural</xpath>
    <value>
      <pawnsPlural>Necrons</pawnsPlural>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/FactionDef[defName="Mechanoid"]/pawnSingular</xpath>
    <value>
      <pawnSingular>Necron</pawnSingular>
    </value>
  </Operation>

</Patch>
