<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Update VFE Insectoids mechanoid precept references to use 40k terminology -->
  
  <!-- Update IssueDef label -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/IssueDef[defName="VME_Mechanoids"]/label</xpath>
    <value>
      <label>cybernetica constructs</label>
    </value>
  </Operation>

  <!-- Update HistoryEventDef label -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/HistoryEventDef[defName="VME_MechanoidDestroyed"]/label</xpath>
    <value>
      <label>cybernetica construct destroyed</label>
    </value>
  </Operation>

  <!-- Update Exalted precept description -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/PreceptDef[defName="VME_Mechanoids_Exalted"]/description</xpath>
    <value>
      <description>To destroy a cybernetica construct is a short-sighted and foolish act. These sacred machines are the Omnissiah's gifts to humanity.</description>
    </value>
  </Operation>

  <!-- Update Exalted thought label and description -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThoughtDef[defName="VME_Mechanoids_Exalted"]/stages/li/label</xpath>
    <value>
      <label>cybernetica construct destroyed</label>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThoughtDef[defName="VME_Mechanoids_Exalted"]/stages/li/description</xpath>
    <value>
      <description>I have destroyed a cybernetica construct being, this will anger the Omnissiah and the Machine God.</description>
    </value>
  </Operation>

  <!-- Update Despised precept description -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/PreceptDef[defName="VME_Mechanoids_Despised"]/description</xpath>
    <value>
      <description>Cybernetica constructs are an abomination, a reminder of man's hubris in the face of the Machine God's wrath.</description>
    </value>
  </Operation>

  <!-- Update Despised thought label and description -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThoughtDef[defName="VME_Mechanoids_Despised"]/stages/li/label</xpath>
    <value>
      <label>cybernetica construct destroyed</label>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThoughtDef[defName="VME_Mechanoids_Despised"]/stages/li/description</xpath>
    <value>
      <description>I have destroyed a cybernetica construct. Good. The abominable intelligence has been purged.</description>
    </value>
  </Operation>

</Patch>
