<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- RulePack for mechanoid/Necron faction names -->
  <RulePackDef>
    <defName>FactionName_Mechanoids_Necron</defName>
    <rulePack>
      <rulesStrings>
        <!-- Top-level pattern for faction names -->
        <li>factionName->the [necronDynasty] dynasty</li>
        <li>factionName->the Tomb World of [necronWorld]</li>
        <li>factionName->the legions of [necronLord]</li>
        <li>factionName->the [necronWorld] tomb legions</li>

        <!-- Sub-rules for components -->
        <li>necronDynasty->Nephrekh</li>
        <li>necronDynasty->Sautekh</li>
        <li>necronDynasty->Mephrit</li>
        <li>necronDynasty->Novokh</li>
        <li>necronDynasty->Nihilakh</li>

        <li>necronWorld->Akhenakh</li>
        <li>necronWorld->Thanatos</li>
        <li>necronWorld->Khepra</li>
        <li>necronWorld->Urdak</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

</Defs>
