          <li>binharicName->01110100</li>
          <li>binharicName->0x4F4D4E</li>
          <li>binharicName->0x534B55</li>
          <li>binharicName->0x4C4C4C</li>
          <li>binharicName->0x505249</li>
          <li>binharicName->0x4D4500</li>
          <li>binharicName->0x544543</li>
          <li>binharicName->0x484200</li>
        </rulesStrings>
        <rulesFiles>
          <li>namefile->Names/Mech_Unisex</li>
        </rulesFiles>
      </rulePack>
    </value>
  </Operation>
</Patch>

